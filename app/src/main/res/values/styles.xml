<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="Theme.Base.Full.Status" parent="Theme.Base">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.Logo" parent="Theme.Base">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/app_blue</item>
    </style>

    <style name="Theme.Main" parent="Theme.Base">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/app_blue</item>
    </style>

    <style name="Theme.Device" parent="Theme.Base">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/app_blue</item>
    </style>

    <style name="Theme.Settings" parent="Theme.Base">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/app_blue</item>
    </style>

    <style name="Theme.Barcode" parent="Theme.Base">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/app_blue</item>
    </style>

